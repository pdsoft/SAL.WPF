<Window x:Class="SAL.WPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="1300" WindowStartupLocation="CenterScreen" WindowState="Normal">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Frame Grid.Column="0" BorderBrush="Blue" BorderThickness="1" NavigationUIVisibility="Hidden" Content="{Binding Path=LeftPanel}"></Frame>
        <Frame Grid.Column="1" BorderBrush="Blue" BorderThickness="1" NavigationUIVisibility="Hidden" Content="{Binding Path=RightPanel}"></Frame>
    </Grid>
</Window>
